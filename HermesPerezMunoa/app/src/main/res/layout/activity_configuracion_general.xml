<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#9eb7c9"
    android:orientation="vertical"
    tools:context="com.laboratorio.hermesperezmunoa.ConfiguracionGeneralActivity"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Configuración general "
        android:id="@+id/tituloConf"
        android:layout_gravity="center"
        android:paddingBottom="10dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dip"
        android:background="#303F9F" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingRight="20dp"
            android:text="Dirección IP del monitor"
            android:id="@+id/textIP"/>

        <EditText
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:id="@+id/editIP" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Puerto del monitor"
            android:id="@+id/textPuerto" />

        <EditText
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:id="@+id/editPuerto" />
    </LinearLayout>

</LinearLayout>
